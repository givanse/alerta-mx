<div class="row cape_header">

  <div class="col-xs-1">
  </div>

  <div class="col-xs-9">
    {{entry.updated}} - hace 1 semana
  </div>

</div>

<div class="row cape_headline" {{action "toggleDetails"}}>

  <div class="col-xs-1">
    <a href="" class="toggle_details">
      {{#if isDetailsVisible}}
        <img src="img/minus.png" class="minus">
      {{else}}
        <img src="img/plus.png" class="plus">
      {{/if}}
    </a>
  </div>

  <div class="col-xs-10">
    {{entry.headline}}
  </div>

</div>

<div class="row">
  <div class="col-xs-1">
  </div>

  <div class="col-xs-10">
    {{entry.area.description}}
  </div>
</div>

{{#if isDetailsVisible}}

  <div class="row cape_description">

    <div class="col-xs-1">
    </div>

    <div class="col-xs-10">
      cat: {{entry.parameters.categoria}}
      <br>
      <span class="cape_source">
        <a {{bind-attr href=entry.web}} target="_blank">
          {{entry.senderName}}
        </a>
      </span>
      <br>
      {{entry.contact}}
    </div>

  </div>

{{/if}}

  <div class="row cape_actions">
    <div class="col-xs-8">
    </div>

    <div class="col-xs-1">
      {{#link-to "map"}}
        <img src="img/map_location.png" alt="map location icon" class="cape_action_icon">
      {{/link-to}}
    </div>

    <div class="col-xs-1">
    </div>

    <div class="col-xs-1">
      <img src="img/share.png" alt="share icon" class="cape_action_icon" {{action "shareCAPEntry"}}>
    </div>

    <div class="col-xs-1">
    </div>
  </div>

<hr>
